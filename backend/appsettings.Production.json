{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "System": "Error",
      "Microsoft": "Error"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:${FILE_SERVICE_PORT:5003}"
      }
    }
  },
  "ConnectionStrings": {
    "PostgresSql": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Pooling=true;TimeZone=UTC"
  },
  "Database": {
    "MinPoolSize": 10,
    "MaxPoolSize": 200,
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "ConnectionIdleLifetime": 300,
    "ConnectionPruningInterval": 10,
    "Pooling": true,
    "Multiplexing": true,
    "MaxAutoPrepare": 20,
    "TcpKeepAlive": true,
    "TcpKeepAliveTime": 600,
    "TcpKeepAliveInterval": 60,
    "MaxRetryCount": 3,
    "EnableSensitiveDataLogging": false
  },
  "RustFSConfig": {
    "AccessKey": "${RUSTFS_ACCESS_KEY}",
    "SecretKey": "${RUSTFS_SECRET_KEY}",
    "Endpoint": "${RUSTFS_ENDPOINT}",
    "Region": "${RUSTFS_REGION:us-east-1}",
    "UseHttps": "${RUSTFS_USEHTTPS:true}",
    "ForcePathStyle": "${RUSTFS_FORCE_PATH_STYLE:true}",
    "ProxyPath": "${RUSTFS_PROXY_PATH:}"
  },
  "FileServiceSecurity": {
    "EnableSharedSecretValidation": "${FILE_SERVICE_ENABLE_SHARED_SECRET_VALIDATION:false}",
    "AdminUsername": "${FILE_SERVICE_ADMIN_USERNAME:admin}",
    "AdminPasswordHash": "${FILE_SERVICE_ADMIN_PASSWORD_HASH}",
    "AdminToken": "${FILE_SERVICE_ADMIN_TOKEN}",
    "AdminSessionTimeoutMinutes": "${FILE_SERVICE_ADMIN_SESSION_TIMEOUT_MINUTES:30}"
  }
}

