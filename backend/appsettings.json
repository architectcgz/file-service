{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgresSql": "Host=localhost;Port=5432;Database=file_service;Username=postgres;Password=YOUR_PASSWORD;Pooling=true;TimeZone=UTC"
  },
  "Database": {
    "MinPoolSize": 5,
    "MaxPoolSize": 100,
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "ConnectionIdleLifetime": 300,
    "ConnectionPruningInterval": 10,
    "Pooling": true,
    "Multiplexing": false,
    "MaxAutoPrepare": 20,
    "TcpKeepAlive": true,
    "TcpKeepAliveTime": 600,
    "TcpKeepAliveInterval": 60,
    "MaxRetryCount": 3,
    "EnableSensitiveDataLogging": false
  },
  "RustFSConfig": {
    "AccessKey": "YOUR_ACCESS_KEY",
    "SecretKey": "YOUR_SECRET_KEY",
    "Endpoint": "your-endpoint:9000",
    "Region": "us-east-1",
    "UseHttps": true,
    "ForcePathStyle": true,
    "Bucket": "blog-files",
    "ImageFolder": "images",
    "DocumentFolder": "documents",
    "VideoFolder": "videos",
    "AudioFolder": "audios",
    "ArchiveFolder": "archives",
    "ProxyPath": "https://your-domain.com/api/files"
  },
  "FileServiceSecurity": {
    "SharedSecret": "YOUR_SHARED_SECRET_KEY",
    "EnableSharedSecretValidation": true,
    "AllowedIpAddresses": []
  }
}

