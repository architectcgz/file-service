# ============================================
# 文件服务环境变量配置示例
# ============================================
# 复制此文件为 .env 并修改相应的配置值

# ============================================
# 数据库配置
# ============================================
FILE_SERVICE_DB_HOST=host.docker.internal
FILE_SERVICE_DB_PORT=5432
FILE_SERVICE_DB_NAME=file_service
FILE_SERVICE_DB_USER=postgres
FILE_SERVICE_DB_PASSWORD=your_password_here

# 数据库连接池配置
FILE_SERVICE_DATABASE_MIN_POOL_SIZE=5
FILE_SERVICE_DATABASE_MAX_POOL_SIZE=50
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_COMMAND_TIMEOUT=60
DATABASE_POOLING=true
DATABASE_CONNECTION_IDLE_LIFETIME=300
DATABASE_CONNECTION_PRUNING_INTERVAL=10
DATABASE_MULTIPLEXING=false
DATABASE_MAX_AUTO_PREPARE=20
DATABASE_TCP_KEEP_ALIVE=true
DATABASE_TCP_KEEP_ALIVE_TIME=600
DATABASE_TCP_KEEP_ALIVE_INTERVAL=60

# ============================================
# RustFS/MinIO 配置
# ============================================
RUSTFS_ACCESS_KEY=your_access_key
RUSTFS_SECRET_KEY=your_secret_key
RUSTFS_ENDPOINT=rustfs:9000
RUSTFS_REGION=us-east-1
RUSTFS_USE_HTTPS=false
RUSTFS_FORCE_PATH_STYLE=true

# 存储桶配置
RUSTFS_BUCKET=blog-files
RUSTFS_IMAGE_FOLDER=images
RUSTFS_DOCUMENT_FOLDER=documents
RUSTFS_VIDEO_FOLDER=videos
RUSTFS_AUDIO_FOLDER=audios
RUSTFS_ARCHIVE_FOLDER=archives

# 代理路径配置
RUSTFS_PROXY_PATH=https://your-domain.com/api/files

# ============================================
# 文件服务安全配置
# ============================================
FILE_SERVICE_SHARED_SECRET=file-service-secret-key-change-in-production
FILE_SERVICE_ENABLE_SHARED_SECRET_VALIDATION=true
FILE_SERVICE_ALLOWED_IP_ADDRESSES=

# 管理员配置
FILE_SERVICE_ADMIN_API_KEY=your_admin_api_key_here
FILE_SERVICE_ENABLE_ADMIN_API_KEY_VALIDATION=true
FILE_SERVICE_ADMIN_USERNAME=admin
FILE_SERVICE_ADMIN_PASSWORD=your_admin_password_here
FILE_SERVICE_ADMIN_SESSION_TIMEOUT_MINUTES=30

# ============================================
# 实例标识
# ============================================
INSTANCE_ID_FILE_SERVICE=4
INSTANCE_NAME_FILE_SERVICE=file-service-1

