# ============================================
# 文件存储配置 (RustFS/MinIO)
# ============================================
RUSTFS_ACCESS_KEY=your_access_key
RUSTFS_SECRET_KEY=your_secret_key
RUSTFS_ENDPOINT=your_endpoint:9000
RUSTFS_REGION=us-east-1
RUSTFS_USE_HTTPS=true
RUSTFS_FORCE_PATH_STYLE=true

# 统一存储桶配置
RUSTFS_BUCKET=blog-files

# 文件类型子目录配置
RUSTFS_IMAGE_FOLDER=images
RUSTFS_DOCUMENT_FOLDER=documents
RUSTFS_VIDEO_FOLDER=videos
RUSTFS_AUDIO_FOLDER=audios
RUSTFS_ARCHIVE_FOLDER=archives

# 统一代理路径配置
RUSTFS_PROXY_PATH=https://your-domain.com/api/files

